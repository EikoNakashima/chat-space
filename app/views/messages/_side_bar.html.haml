.Side-bar
  .User-name
    .Box
      %p.Box__left
        = current_user.name
      .Box__right
        = link_to new_group_path do
          = icon('far', 'edit',  class: "Box__right--left-icon")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog',  class: "Box__right--right-icon")
  .Group-list
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message
            = group.show_last_message